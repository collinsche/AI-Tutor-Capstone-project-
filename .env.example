# AI Educational Assistant - Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# AI CONFIGURATION
# =============================================================================

# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# AI Model Settings
AI_MODEL=gpt-3.5-turbo
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=1000
AI_TOP_P=1.0
AI_FREQUENCY_PENALTY=0.0
AI_PRESENCE_PENALTY=0.0

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application Settings
APP_TITLE=AI Educational Assistant
APP_DEBUG=False
APP_PORT=8501
APP_HOST=localhost
APP_VERSION=1.0.0

# Session Configuration
SESSION_TIMEOUT=3600
MAX_CONVERSATION_HISTORY=100
AUTO_SAVE_INTERVAL=300

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database Settings (SQLite by default)
DATABASE_URL=sqlite:///data/educational_assistant.db
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Data Storage Paths
USER_PROFILES_PATH=data/profiles/
ANALYTICS_DATA_PATH=data/analytics/
LOGS_PATH=logs/

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Security Settings
SECRET_KEY=your_secret_key_here_change_this_in_production
ENCRYPTION_KEY=your_encryption_key_here
HASH_ALGORITHM=sha256

# CORS Settings
ALLOWED_ORIGINS=http://localhost:8501,http://127.0.0.1:8501
ALLOWED_METHODS=GET,POST,PUT,DELETE
ALLOWED_HEADERS=Content-Type,Authorization

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =============================================================================
# LEARNING CONFIGURATION
# =============================================================================

# Learning Settings
DEFAULT_LEARNING_STYLE=Visual
DEFAULT_DIFFICULTY_LEVEL=Intermediate
MAX_SESSION_DURATION=7200
MIN_SESSION_DURATION=300

# Recommendation Settings
MAX_RECOMMENDATIONS=10
RECOMMENDATION_REFRESH_INTERVAL=3600
PERSONALIZATION_THRESHOLD=0.7

# =============================================================================
# UI CONFIGURATION
# =============================================================================

# UI Settings
THEME=light
PRIMARY_COLOR=#1f77b4
BACKGROUND_COLOR=#ffffff
TEXT_COLOR=#262730

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost
STREAMLIT_SERVER_HEADLESS=false
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# =============================================================================
# ANALYTICS CONFIGURATION
# =============================================================================

# Analytics Settings
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=365
ANALYTICS_BATCH_SIZE=100
ANALYTICS_EXPORT_FORMAT=json

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMACE_SAMPLE_RATE=0.1
METRICS_COLLECTION_INTERVAL=60

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Cache Settings
ENABLE_CACHING=true
CACHE_TTL=3600
CACHE_MAX_ENTRIES=1000
CACHE_TYPE=memory

# Redis Configuration (if using Redis cache)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0
# REDIS_PASSWORD=

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# Email Settings (for notifications and reports)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=true

# Email Templates
FROM_EMAIL=noreply@yourdomain.com
SUPPORT_EMAIL=support@yourdomain.com

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Third-party API Keys (optional)
# GOOGLE_API_KEY=your_google_api_key
# WIKIPEDIA_API_ENDPOINT=https://en.wikipedia.org/api/rest_v1/
# WOLFRAM_ALPHA_API_KEY=your_wolfram_alpha_key

# Content Delivery Network
# CDN_URL=https://your-cdn-domain.com
# STATIC_FILES_URL=/static/

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Settings
DEVELOPMENT_MODE=false
DEBUG_SQL=false
ENABLE_PROFILING=false
HOT_RELOAD=false

# Testing Configuration
TEST_DATABASE_URL=sqlite:///test_educational_assistant.db
TEST_DATA_PATH=tests/data/
RUN_INTEGRATION_TESTS=false

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# Production Settings
PRODUCTION_MODE=false
USE_SSL=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Load Balancing
WORKER_PROCESSES=1
WORKER_THREADS=4
MAX_REQUESTS_PER_WORKER=1000

# Monitoring and Health Checks
HEALTH_CHECK_ENDPOINT=/health
METRICS_ENDPOINT=/metrics
ENABLE_HEALTH_CHECKS=true

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Backup Settings
ENABLE_AUTO_BACKUP=true
BACKUP_INTERVAL=86400
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=backups/

# Cloud Storage (optional)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_S3_BUCKET=your-backup-bucket
# AWS_REGION=us-east-1

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature Toggles
ENABLE_USER_REGISTRATION=true
ENABLE_SOCIAL_LOGIN=false
ENABLE_OFFLINE_MODE=false
ENABLE_VOICE_INPUT=false
ENABLE_MOBILE_APP=false

# Experimental Features
ENABLE_BETA_FEATURES=false
ENABLE_AI_VOICE_RESPONSES=false
ENABLE_COLLABORATIVE_LEARNING=false
ENABLE_GAMIFICATION=false

# =============================================================================
# LOCALIZATION
# =============================================================================

# Language Settings
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,zh,ja
TIMEZONE=UTC
DATE_FORMAT=%Y-%m-%d
TIME_FORMAT=%H:%M:%S

# =============================================================================
# RATE LIMITING
# =============================================================================

# Rate Limiting Settings
ENABLE_RATE_LIMITING=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# API Rate Limits
API_RATE_LIMIT=100
API_BURST_LIMIT=200
API_RATE_LIMIT_WINDOW=3600

# =============================================================================
# NOTES
# =============================================================================

# IMPORTANT NOTES:
# 1. Never commit the actual .env file to version control
# 2. Keep your API keys and secrets secure
# 3. Use strong, unique passwords and keys
# 4. Regularly rotate your API keys and secrets
# 5. Use environment-specific configurations for different deployments
# 6. Test your configuration in a development environment first
# 7. Monitor your API usage and costs
# 8. Enable logging and monitoring in production
# 9. Implement proper backup and disaster recovery procedures
# 10. Follow security best practices for your deployment environment